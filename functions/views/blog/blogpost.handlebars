<!DOCTYPE html>
<html>
  <head>
    {{> header }}

    <meta name="description" content="{{settings.aboutBlog}}"/>
    <meta name="author" content="{{post.user.displayName}}"/>
    <title>{{post.title}}</title>
  </head>
  <body>
    <!-- Navigation-->
    {{> navigation }}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>{{settings.blogTitle}}</h1>
                        <span class="subheading">{{settings.blogSubTitle}}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <!-- Post preview-->
        <div class="post-preview">
          <a href="/post/{{post.postLink}}">
              <h2 class="post-title">{{post.title}}</h2>
          </a>
          <p>{{{post.content}}}</p>
          <p class="post-meta">
              Posted by <a href="{{post.user.username}}">{{post.user.displayName}}</a>
              on {{post.meta.publishedOn}}
          </p>
        </div>
        <!-- Divider-->
        <hr class="my-4" />
      </div>
    </div>
    </div>
    {{{body}}}
    <!-- Main Content Ends here-->
    <!-- Footer-->
    {{> footer }}
  </body>
</html>